{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*.js"]
    }
  },
  "exclude": ["__fixtures__", "coverage", "dist", "node_modules"],
  "include": ["src"]
}
